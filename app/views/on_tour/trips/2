table#trips
  thead
    tr
      th Sezon
      th Data
      th Rywal
      th Wynik
      th Wyjazdowiczow
      th Komentarz
      th Relacja
      th Dodano
  tbody
    - for trip in trips
      tr
        td = trip.match.season
        td = l trip.match.date, format: :long
        td = trip.match.home_team
        td
          = link_to_if trip.match.stats_url.present?,
            "#{trip.match.home_score}:#{trip.match.away_score}",
            trip.match.stats_url
        td = trip.official_number
        td = trip.comment
        td = trip.article_url
        td = trip.created_at
